<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <title>Find Your New Family</title>
</head>
<body>
    <%- include('components/navbar') %>

    <main>
        <div class="page-intro">
            <h2><%= intro %> </h2>
        </div>
        <div class="content-container">
            <!-- Sidebar Section -->
            <%- include('components/sidebar') %>
            
            <!-- Items Section -->
            <section class="section items-container">
                <h1><%= title %></h1>
                <% if(!items || items.length === 0) { %>
                    <div class="no-items">
                        <h3>Sorry no items</h3>
                    </div>
                <% } else { %>
                <div class="items">
                    <% items.forEach( (animal) => { %>
                        <a href="/profile/<%= animal.animal_id %>">
                            <div class="item-card">
                                <img src=" <%= animal.img %> " alt="<%= animal.name %>">
                                <h4> <%= animal.name %> </h4>
                                <p> <%= animal.age %></p>
                            </div>
                        </a>
                    <% }) %>
                </div>
                <% } %> 
            </section>
        </div>
    </main>
    
    <%- include('components/footer') %>

    <script src="/index.js"></script>

</body>
</html>